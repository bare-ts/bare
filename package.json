{
  "name": "@bare-ts/tools",
  "version": "0.9.0",
  "description": "Compiler and tools for BARE schema",
  "keywords": [
    "bare",
    "binary format",
    "decoder",
    "cli",
    "compiler",
    "encoder",
    "serialization",
    "schema"
  ],
  "author": "Victorien Elvinger (victorien.elvinger.fr)",
  "license": "Apache-2.0",
  "homepage": "https://baremessages.org",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bare-ts/tools.git"
  },
  "bugs": {
    "url": "https://github.com/bare-ts/tools/issues"
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "type": "module",
  "bin": {
    "bare": "dist/cli.js"
  },
  "types": "./dist/",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "es2015": "./dist/index.js",
  "exports": {
    "require": "./dist/index.cjs",
    "default": "./dist/index.js"
  },
  "sideEffects": false,
  "files": [
    "dist/*.cjs",
    "dist/*.d.ts",
    "dist/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.js"
  ],
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "sh ./scripts/build.sh",
    "clean": "rm -rf dist",
    "prepare": "validate-commit-msg",
    "check-git": "test -z \"$(git status --porcelain)\"",
    "prepublishOnly": "npm run check-git && npm run clean && npm test",
    "test": "sh ./scripts/test.sh",
    "test:coverage": "c8 --reporter=lcovonly npm test"
  },
  "devDependencies": {
    "@bare-ts/lib": "~0.3.0",
    "@types/node": "~16.7.11",
    "esbuild": "~0.14.39",
    "oletus": "3.2.0",
    "prettier": "2.6.2",
    "typescript": "~4.6.4",
    "validate-commit-message": "3.2.0"
  },
  "dependencies": {
    "commander": "^9.2.0"
  },
  "peerDependencies": {
    "@bare-ts/lib": "~0.3.0"
  }
}
