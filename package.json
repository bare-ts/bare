{
  "name": "@bare-ts/tools",
  "version": "0.1.1",
  "description": "Compiler and tools for BARE schema",
  "keywords": [
    "bare",
    "binary format",
    "decoder",
    "cli",
    "compiler",
    "encoder",
    "serialization",
    "schema"
  ],
  "author": "Victorien Elvinger (victorien.elvinger.fr)",
  "license": "Apache-2.0",
  "homepage": "https://baremessages.org",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bare-ts/tools.git"
  },
  "bugs": {
    "url": "https://github.com/bare-ts/tools/issues"
  },
  "engines": {
    "node": ">= 12"
  },
  "type": "module",
  "bin": {
    "bare-ts": "dist/cli.js"
  },
  "types": "./dist/",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "es2015": "./dist/index.js",
  "exports": {
    "require": "./dist/index.cjs",
    "default": "./dist/index.js"
  },
  "sideEffects": false,
  "files": [
    "dist/*.cjs",
    "dist/*.d.ts",
    "dist/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.js"
  ],
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "sh ./scripts/build.sh",
    "clean": "rm -rf dist",
    "postinstall": "validate-commit-msg",
    "prepublishOnly": "npm run clean && npm test",
    "test": "npm run build && tsc -b tests tests-data && oletus tests/*.test.js tests-data/**/*.test.js",
    "test:coverage": "c8 --reporter=lcovonly npm test"
  },
  "devDependencies": {
    "@bare-ts/lib": "~0.2.0",
    "@types/node": "^17.0.7",
    "esbuild": "~0.14.10",
    "oletus": "=3.2.0",
    "prettier": "~2.5.1",
    "typescript": "~4.5.4",
    "validate-commit-message": "=3.2.0"
  },
  "dependencies": {
    "commander": "^8.3.0"
  },
  "peerDependencies": {
    "@bare-ts/lib": "~0.2.0"
  }
}
