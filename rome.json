{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
  "formatter": {
    "indentStyle": "space",
    "indentSize": 4,
    "ignore": ["*.json", "tests-corpus/"]
  },
  "linter": {
    "rules": {
      "all": true,
      "nursery": {
        "noConfusingArrow": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteProperties": "preserve",
      "semicolons": "asNeeded"
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
