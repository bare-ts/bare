{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "formatter": {
    "indentStyle": "space",
    "indentSize": 4,
    "ignore": ["*.json", "./tsconfig-base.json"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "nursery": {
        "useLiteralKeys": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteProperties": "preserve",
      "semicolons": "asNeeded"
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
