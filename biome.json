{
  "$schema": "https://next.biomejs.dev/schemas/2.0.0-beta.3/schema.json",
  "files": {
    "ignoreUnknown": true
  },
  "formatter": {
    "includes": [
      "**",
      "!tests-corpus/**"
    ],
    "indentStyle": "space",
    "indentWidth": 4
  },
  "linter": {
    "domains": {
      "project": "recommended",
      "test": "recommended"
    },
    "rules": {
      "complexity": {
        "noUselessLoneBlockStatements": "off",
        "noVoid": "on"
      },
      "nursery": {
        "useExhaustiveSwitchCases": "off"
      },
      "performance": {
        "noDelete": "on"
      },
      "style": {
        "noDefaultExport": "on",
        "noDoneCallback": "on",
        "noImplicitBoolean": "on",
        "noInferrableTypes": "on",
        "noNamespace": "on",
        "noNegationElse": "on",
        "noParameterAssign": "on",
        "noParameterProperties": "on",
        "noUnusedTemplateLiteral": "on",
        "noUselessElse": "on",
        "noYodaExpression": "on",
        "useAsConstAssertion": "on",
        "useBlockStatements": "on",
        "useCollapsedElseIf": "on",
        "useConsistentArrayType": "on",
        "useConsistentBuiltinInstantiation": "on",
        "useConst": "on",
        "useDefaultParameterLast": "on",
        "useEnumInitializers": "on",
        "useExplicitLengthCheck": "on",
        "useFilenamingConvention": {
          "level": "on",
          "options": {
            "filenameCases": [
              "kebab-case"
            ]
          }
        },
        "useForOf": "off",
        "useNamingConvention": {
          "level": "on",
          "options": {
            "conventions": [
              {
                "selector": {
                  "kind": "typeAlias"
                },
                "formats": [
                  "PascalCase",
                  "camelCase"
                ]
              },
              {
                "selector": {
                  "kind": "objectLiteralProperty"
                },
                "match": "__proto__|(.+)",
                "formats": [
                  "camelCase",
                  "PascalCase"
                ]
              }
            ]
          }
        },
        "useNodeAssertStrict": "on",
        "useNumberNamespace": "on",
        "useShorthandAssign": "on",
        "useSingleVarDeclarator": "on",
        "useThrowNewError": "on",
        "useThrowOnlyError": "on"
      },
      "suspicious": {
        "noConsole": {
          "level": "on",
          "options": {
            "allow": [
              "info",
              "warn",
              "error"
            ]
          }
        },
        "noEmptyBlockStatements": "on",
        "noEvolvingTypes": "on",
        "noExportsInTest": "on",
        "noVar": "on",
        "useErrorMessage": "on",
        "useNumberToFixedDigitsArgument": "on"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "json": {
    "formatter": {
      "expand": "always",
      "indentWidth": 2
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
